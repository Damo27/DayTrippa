<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    mapbox:cardCornerRadius="8dp"
    mapbox:cardElevation="8dp"
    mapbox:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="10dp"
            android:text="Origin: "
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="10dp"
            android:text="Destination: "
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="10dp"
            android:text="Distance: "
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="10dp"
            android:text="Duration: "
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="-29.762032"
            mapbox:mapbox_cameraTargetLng="31.034113"
            mapbox:mapbox_cameraTilt="75"
            mapbox:mapbox_cameraZoom="12"
            tools:layout_editor_absoluteX="-109dp"
            tools:layout_editor_absoluteY="-16dp">

        </com.mapbox.mapboxsdk.maps.MapView>
    </LinearLayout>

</android.support.v7.widget.CardView>